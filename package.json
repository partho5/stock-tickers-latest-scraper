{
  "type": "module",

  "name": "stock-symbols-scaper",
  "version": "1.0.0",
  "description": "A stock ticker application built with Electron",
  "author": "Partho Protim",

  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "mongoose": "^8.7.0",
    "playwright": "^1.47.2"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.nanybot.stocksymbols",
    "productName": "Stock Symbols Scaper",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "index.js",
      "index.html"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
